<div class="container w-25 text-center align-content-center">
  <div class="card">
    <div class="card-header">
      <h4><%= @friend.first_name + ' ' + @friend.last_name %></h4>
    </div>
    <div class="card-body">
      <p>E-mail : <%= @friend.email %></p>
      <p>Phone : <%= @friend.phone %></p>
      <p>Twitter : <%= @friend.twitter %></p>
    </div>
  </div>

  <br/>

  <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-secondary" %>
  <%= link_to "Back", friends_path, class: "btn btn-dark" %>

</div>