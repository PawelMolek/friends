<p style="color: green"><%= notice %></p>
<div class="col-md-8">
  <div class="h-100 p-5 bg-light border rounded-3">

    <h2>
      <%= @friend.first_name %>
      <%= @friend.last_name %>
    </h2>

    <br/>

    <p class="lead">
      <%= @friend.email %> |
      <%= @friend.phone %> |
      <%= @friend.twitter %>
    </p>

    <br/><br/>

    <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-secondary" %>
    <%= link_to "Back to friends", friends_path, class: "btn btn-secondary" %>
  </div>
</div>

