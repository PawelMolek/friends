<div class="container w-25 text-center align-content-center">
  <div class="card">
    <div class="card-header">
      <h4><%= @friend.first_name + ' ' + @friend.last_name %></h4>
    </div>
    <div class="card-body text-start">
      <table>
        <tr>
          <td><b>E-mail : </b></td>
          <td><%= @friend.email %></td>
        </tr>
        <tr>
          <td><b>Phone : </b></td>
          <td><%= @friend.phone %></td>
        </tr>
        <tr>
          <td><b>Twitter : </b></td>
          <td><%= @friend.twitter %></td>
        </tr>
      </table>
    </div>
  </div>

  <br/>

  <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-secondary" %>
  <%= link_to "Back", friends_path, class: "btn btn-dark" %>

</div>