
<div class="container w-25 text-center align-content-center">
  <div class="card">
    <div class="card-header">
      <h4>Edit Friend</h4>
    </div>
    <div class="card-body">
      <%= render "form", friend: @friend %>
    </div>
  </div>
  <br>

  <div>
    <%= link_to "Show", @friend, class: "btn btn-secondary" %>
    <%= link_to "Back", friends_path, class: "btn btn-dark" %>
  </div>

  <br/>
  <%= button_to "Delete", friend_path(@friend), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: "btn btn-danger m-1" %>
</div>