<h1>Editing friend</h1>

<%= render "form", friend: @friend %>

<br>

<div class="button-box col-lg-12">

  <%= button_to "Show", @friend, class:"btn btn-secondary"%>
  <%= button_to "Back", friends_path, class:"btn btn-dark"%>
  <%= button_to "Delete", friend_path(@friend), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: "btn btn-outline-danger" %>
</div>
